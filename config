[module/date]
type                       = internal/date
date                       =
date-alt                   = %Y-%m-%d%
time                       = %H:%M
time-alt                   = %H:%M:%S
label                      = %date% %time%
label-font                 = 3
label-foreground           = ${colors.blue}

[module/xmonad]
type                       = custom/script
exec                       = xmonad-log
tail                       = true

[module/filesystem]
type                       = internal/fs
mount-0                    = /
interval                   = 2
fixed-values               = true
label-mounted              = "  💽:%used% of %total%  "

[module/pulseaudio]
type                       = internal/pulseaudio
use-ui-max                 = true
format-volume              = <ramp-volume>:<label-volume>
interval                   = 5
label-muted                = 🔇:%percentage%%
label-muted-foreground     = ${colors.red}
ramp-volume-0              = 🔈
ramp-volume-1              = 🔉
ramp-volume-2              = 🔊
click-right                = pavucontrol &

[module/cpu]
