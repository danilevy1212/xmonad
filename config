[bar/topbar]
modules-right              = memory filesystem pulseaudio battery backlight menu-apps
modules-center             = date
modules-left               = xmonad cpu wired-network wireless-network
tray-position              = right
font-0                     = "Robot Mono:size       =8:style=Regular;3"
