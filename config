[module/wireless-network]
type                       = internal/network
interface                  = wlp59s0
label-connected            = "   %{F#e06c75} %essid%%{F-} %{F#c678dd}⬆%upspeed%%{F-} %{F#98c379}⬇%downspeed%%{F-}  "

[module/wired-network]
type                       = internal/network
interface                  = eno1
