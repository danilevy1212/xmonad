#!/bin/sh
[ -f ~/.Xresources ] && xrdb -merge -I ~/.Xresources

setxkbmap -layout "us(altgr-intl)" -option "ctrl:nocaps" -option "grp:shifts_toggle"
xsetroot -cursor_name left_ptr
xset r rate 300 50 &
picom &
nm-applet &
dropbox start &
pactl load-module module-bluetooth-discover &
blueman-applet &
udiskie -a -s --terminal="termite" &

if [ -n "$WORK_STATION" ]; then
    gnome-screensaver &
else
    xscreensaver -no-splash &
fi

ibus-daemon -drx --panel /usr/lib/ibus/ibus-ui-gtk3 &
sh ~/.xmonad/wallpaper_switcher &
polybar topbar -c ~/.xmonad/polybar-config.ini &

exec xmonad
