#!/bin/sh

[ -f ~/.Xresources ] && xrdb -merge -I ~/.Xresources

setxkbmap es -option "ctrl:swapcaps"
xsetroot -cursor_name left_ptr
xset r rate 200 50 &
xcompmgr -c -n &
# xsetroot -solid black
# trayer --edge top --align right --SetDockType true --SetPartialStrut true \
#        --expand true --width 15 --transparent true --alpha 0 --tint 0x283339 --height 21 \
#        --monitor 0 --iconspacing 4 &
# nm-applet &
dropbox start &
pactl load-module module-bluetooth-discover &
blueman-applet &
# pa-applet &
# cbatticon &
xscreensaver -no-splash &
ibus-daemon -drx --panel /usr/lib/ibus/ibus-ui-gtk3

sh ~/.xmonad/wallpaper_switcher &
polybar topbar -c ~/.xmonad/polybar-config.ini &

exec xmonad
